@page
@model Abby.web.Pages.Categories.DeleteModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Category</h2>
        </div>
        <hr />
        <div class="mb-3">
            <label asp-for="Category.Name">Category Name</label>
            <input disabled type="text" asp-for="Category.Name" name="Name" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder">Display Order</label>
            <input disabled type="text" asp-for="Category.DisplayOrder" name="DisplayOrder" class="form-control">
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-primary">Back to Home</a>
    </div>
</form>
